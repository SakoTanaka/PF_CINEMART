<div class="cotainer">
  <div class="row cart-movie-index">
    <div class="col-md-10">
      <h2><i class="fas fa-shopping-cart"></i> ショッピングカート</h2>
    </div>

    <% if @cart_movies.any? %>
    <div class="col-md-2">
     <%= link_to "カートを空にする",  cart_movies_destroy_all_path, method: :delete, data: {confirm: "カート内を全て削除します。よろしいですか？"},  class: "btn btn-danger"%>
    </div>
    <table class="table table-striped col-md-12">
      <thead>
        <tr class="info">
          <th>作品名</th>
          <th>使用希望</th>
        </tr>
      </thead>
      <tbody>
        <% @cart_movies. each do |cart_movie| %>
          <tr>
            <td>
              <%= attachment_image_tag cart_movie.movie, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
              <%= cart_movie.movie.name %>
            </td>
            <td>
              <%= link_to "取り消し", cart_movie_path(cart_movie), method: :delete, data: {confirm: "#{cart_movie.movie.name}を削除してよろしいですか？"},  class: "btn btn-danger" %>
            </td>
          </tr>
        <% end %>

      </tbody>
    </table>

    <div class="col-md-9">
       <%= link_to "利用作品の選択を続ける", root_path, class: "btn btn-primary" %>
    </div>
    <br>
    <br>
    <div class="application col-md-12">
      <%= link_to "利用申請手続きへ", new_application_path, class: "btn btn-success" %>
    </div>

    <% else %>
      <div>カートに作品がありません。</div>
    <% end %>
  </div>
</div>