<div class="container">
  <div class="col-md-12 application_index">
    <h2><i class="far fa-sticky-note"></i> 利用申請履歴一覧</h2>
    <table class="table">
      <thead>
        <tr>
          <th>申請日</th>
          <th>作品名</th>
          <th>使用目的</th>
          <th>掲載予定日</th>
          <th>掲載媒体</th>
        </tr>
      </thead>

      <tbody>
        <% @applications.each do |application| %>
        <tr>
          <td>
            <%= application.created_at.strftime("%Y/%m/%d") %>
          </td>
          <td>
            <% application.application_details.each do |application_detail| %>
            <%= application_detail.movie.name %></br>
            <% end %>
          </td>
          <td>
            <%= application.purpose %>
          </td>
          <td>
            <%= application.date %>
          </td>
          <td>
            <%= application.media %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>