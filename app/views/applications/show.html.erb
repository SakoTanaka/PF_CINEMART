<div class="container">
  <div class="col-md-12 order_show">
    <h2><i class="far fa-sticky-note"></i> 利用申請履歴詳細</h2>
    <div class="row order_info_box">
      <div class="col-md-7">
        <h3>利用申請情報</h3>
        <table class="table">
          <tr>
            <th>申請日</th>
            <td><%= @application.created_at.strftime("%Y/%m/%d") %></td>
          </tr>
          <tr>
            <th>使用媒体</th>
            <td><%= @application.media %></td>
          </tr>
          <tr>
            <th>使用目的</th>
            <td><%= @application.order_status %></td>
          </tr>
        </table>
      </div>
      <div class="col-md-5">
        <h3>請求情報</h3>
        <table class="table">
          <tr>
            <th>商品合計</th>
            <td><%= @order.billing_amount - @order.delivery_charge %></td>
          </tr>
          <tr>
            <th>配送料</th>
            <td><%= @order.delivery_charge %></td>
          </tr>
          <tr>
            <th><strong>ご請求額</strong></th>
            <td><%= @order.billing_amount %></td>
          </tr>
        </table>
      </div>
    </div>

    <div class="col-md-8 order_box">
      <h3>注文内容</h3>
      <table class="table">
        <thead>
          <tr>
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>

        <tbody>
          <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.price %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.price * order_detail.amount %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>