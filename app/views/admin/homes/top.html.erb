<div class="container">
  <div class="col-md-8">
    <h3 class="order-headding"><i class="far fa-sticky-note"></i> 利用申請一覧</h3>

    <table class="table">
      <thead>
        <tr>
          <th>利用申請日時</th>
          <th>申請者</th>
          <th>作品名</th>
          <th>使用目的</th>
          <th>掲載予定日</th>
          <th>掲載媒体</th>
        </tr>
      </thead>
          <% @applications.each do |application| %>
        <tr>
          <td>
            <%= link_to admin_application_path(@applications), class: "text-secondary" do %>
            <%= application.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
            <% end %>
          </td>
          <td>
            <%= application.user.last_name %><%= application.user.first_name %>
          </td>
          <td>
           <% application.application_details.each do |application_detail| %>
            <%= application_detail.movie.name %></br>
           <% end %>
          </td>
          <td>
            <%= application.purpose %>
          </td>
          <td>
            <%= application.date %>
          </td>
          <td>
            <%= application.media %>
          </td>
        </tr>
        <% end %>
      <tbody>

      </tbody>
    </table>
  </div>
</div>