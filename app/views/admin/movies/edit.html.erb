<div class="container">
  <div class="col-md-8">
    <h2>作品編集</h2>
    <%= form_with model: @movie, url: admin_movie_path(@movie.id), local:true do |f| %>
    <table>
    <br>

      <tr>
        <th><%= f.label :"作品キーアート" %></th>
        <td><%= f.attachment_field :image, class: "form-control-file product_item" %></td>
        <td></td>
      </tr>

      <tr>
        <th><%= f.label :"作品名" %></th>
        <td><%= f.text_field :name, autofocus: true, class: "form-control product_item" %></td>
        <td></td>
      </tr>

      <tr>
        <th><%= f.label :"あらすじ" %></th>
        <td><%= f.text_area :introduction, autofocus: true, class: "form-control product_item" %></td>
        <td></td>
      </tr>

      <tr>
        <th><%= f.label :"スタッフ情報" %></th>
        <td><%= f.text_area :staff, autofocus: true, class: "form-control product_item" %></td>
        <td></td>
      </tr>

      <tr>
        <th><%= f.label :"キャスト情報" %></th>
        <td><%= f.text_area :cast, autofocus: true, class: "form-control product_item" %></td>
        <td></td>
      </tr>

　    <tr>
        <th><%= f.label :"公開日" %></th>
        <td><%= f.text_field :releasedate, autofocus: true, class: "form-control product_item" %></td>
        <td></td>
      </tr>

      <tr>
        <th><%= f.label :"コピーライト" %></th>
        <td><%= f.text_field :copyright, autofocus: true, class: "form-control product_item" %></td>
        <td></td>
       </tr>

      <tr>
        <th><%= f.label :"ジャンル" %></th>
        <td><%= f.collection_select :genre_id, Genre.all, :id, :name, class: "form-control product_item" %></td>
        <td></td>
      </tr>

      <tr>
        <th><%= f.label :"使用許諾情報" %></th>
        <td>
           <%= f.radio_button :is_active, :true %>
           <%= f.label :is_active, "使用可能" %>
           <%= f.radio_button :is_active, :false %>
           <%= f.label :id_active, "使用禁止" %>
        </td>
        <td></td>
      </tr>

    </table>
    <%= f.submit "変更を保存する", class: "product_item btn btn-success" %>
    <% end %>
  </div>
</div>