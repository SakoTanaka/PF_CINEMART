<div class="container">
  <div class="col-md-9">
    <br>
    <h3 class="user_headding">会員一覧</h3>
    <table class="table">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>会社名</th>
          <th>所属部署名</th>
          <th>ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= user.id %>
            </td>
            <td>
              <%= link_to  admin_user_path(user) do %>
                <%= user.last_name %><%= user.first_name %>
              <% end %>
            </td>
            <td>
              <%= user.email %>
            </td>
            <td>
              <%= user.company %>
            </td>
            <td>
              <%= user.department %>
            </td>
            <td>
              <% if user.is_active == true %>
                <p class="text-success">有効</p>
              <% else %>
                <p class="text-black-50">退会</p>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>