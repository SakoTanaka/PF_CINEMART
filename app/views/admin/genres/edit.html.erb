<div class="container">
  <div class="col-md-4 genre-container">
    <h3 class="genre-headding"><i class="fas fa-file-video"></i> 作品ジャンル編集</h3>
    <%= form_with model: @genre, url: admin_genre_path, local: true do |f| %>
    <%= f.label :"作品ジャンル名" %>
    <%= f.text_field :name, autofocus: true, class: "form-control" %>
    <%= f.submit "変更を保存する", class: "genre-edit-btn btn btn-success" %>
    <% end %>
  </div>
</div>