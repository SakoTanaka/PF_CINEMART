<div class="container">
  <div class="col-md-8">
  <h3 class="user_edit"><i class="fas fa-user-cog"></i>会員情報編集</h3>
  <%= form_with model: @user, local:true do |f| %>
    <table class="table">
      
      <tr>
        <th><%= f.label :"氏名" %></th>
        <td><%= f.text_field :last_name, class: "form-control" %></td>
        <td><%= f.text_field :first_name, class: "form-control" %></td>
      </tr>
      
      <tr>
        <th><%= f.label :"フリガナ" %></th>
        <td><%= f.text_field :last_name_kana, class: "form-control" %></td>
        <td><%= f.text_field :first_name_kana, class: "form-control" %></td>
      </tr>
      
       <tr>
          <th><%= f.label :"会社名" %></th>
          <td>
            <%= f.text_field :company, autofocus: true, autocomplete: "company", class: "form-control" %>
          </td>
        </tr>

    　   <tr>
           <th><%= f.label :"会社名(カナ)" %></th>
           <td>
            <%= f.text_field :company_name_kana, autofocus: true, autocomplete: "company_name_kana", class: "form-control" %>
          </td>
        </tr>

      　<tr>
           <th><%= f.label :"所属部署名" %></th>
           <td>
            <%= f.text_field :department, autofocus: true, autocomplete: "department", class: "form-control" %>
          </td>
        </tr>
      
      <tr>
        <th><%= f.label :"郵便番号" %></th>
        <td><%= f.text_field :postal_code, class: "form-control" %></td>
        <td></td>
      </tr>
      
      <tr>
        <th><%= f.label :"住所" %></th>
        <td><%= f.text_field :address, class: "form-control" %></td>
        <td></td>
      </tr>
      
      <tr>
        <th><%= f.label :"電話番号" %></th>
        <td><%= f.text_field :telephone_number, class: "form-control" %></td>
        <td></td>
      </tr>
      
      <tr>
        <th><%= f.label :"メールアドレス" %></th>
        <td><%= f.text_field :email, class: "form-control" %></td>
        <td></td>
      </tr>
      
      <tr>
        <th></th>
        <td><%= f.submit "編集内容を保存", class: "btn btn-success" %></td>
        <td><%= link_to "退会する", users_withdraw_path, class: "btn btn-danger"%></td>
      </tr>
      
    </table>
  <% end %>
  </div>
</div>